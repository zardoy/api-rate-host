    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "./nexus-test-environment.js",
        "rootDir": "tests",
        "globals": {
            "ts-jest": {
                "diagnostics": {
                    "warnOnly": true
                }
            }
        },
        "maxConcurrency": 1
