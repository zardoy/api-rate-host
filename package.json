{
    "name": "learn-nexus",
    "version": "0.0.1",
    "license": "MIT",
    "private": true,
    "dependencies": {
        "@nexus/schema": "^0.14.0",
        "@prisma/client": "2.1.3",
        "graphql-relay": "^0.6.0",
        "jest-environment-node": "^26.3.0",
        "lodash": "^4.17.19",
        "nexus": "^0.25.0",
        "nexus-plugin-prisma": "^0.16.1",
        "typescript": "^3.9.6"
    },
    "devDependencies": {
        "@types/graphql-relay": "^0.6.0",
        "@types/jest": "^26.0.4",
        "@types/lodash": "^4.14.157",
        "jest": "^26.1.0",
        "md5-file": "^5.0.0",
        "ts-jest": "^26.1.2",
        "ts-node": "^8.10.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "./nexus-test-environment.js",
        "rootDir": "tests",
        "globals": {
            "ts-jest": {
                "diagnostics": {
                    "warnOnly": true
                }
            }
        }
    },
    "scripts": {
        "dev": "nexus dev",
        "test": "jest",
        "test-watch": "jest --watch",
        "postinstall": "npx prisma generate",
        "reset-database": "ts-node ./tests/initDB.ts",
        "introspect-db": "ts-node ./tasks/introspect.ts",
        "local-postgres": "docker run --name postgres --rm --publish 5432:5432 -e POSTGRES_PASSWORD=postgres postgres:10.12"
    }
}
